<h1> New Event </h1>

<%= form_with model: @event do |form| %>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% @event.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>      
    </div>

    <div>
        <%= form.label :date %>
        <%= form.date_field :date %>
        <% @event.errors.full_messages_for(:date).each do |message| %>
            <div><%= message %></div>
        <% end %>      
    </div>

    <div>
        <%= form.submit %>      
    </div>

<%= end %>